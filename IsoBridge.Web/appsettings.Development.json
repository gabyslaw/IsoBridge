{
  "Iso8583": {
    "TemplatePath": "Config/iso8583-templates.json",
    "UseBcd": false
  },
  "ConnectionStrings": {
    "AuditDb": "Data Source=audit.db"
  },
  "AuditSecurity": {
    "HmacKey": "dev-only-change-me"
  },
  "Forwarding": {
    "Routes": {
      "auth-rest": {
        "Type": "rest",
        "BaseAddress": "https://httpbin.org",
        "Path": "/post",
        "Method": "POST",
        "Headers": {
          "X-IsoBridge": "demo"
        },
        "SendRaw": false
      },
      "echo-raw": {
        "Type": "rest",
        "BaseAddress": "https://httpbin.org",
        "Path": "/anything/raw",
        "Method": "POST",
        "SendRaw": true
      },
      "soap-local": {
        "Type": "soap",
        "BaseAddress": "https://localhost:7013",
        "Path": "/soap/paymentauth",
        "Method": "POST",
        "SoapAction": "urn:isobridge:payments/PaymentAuth",
        "Headers": {
          "X-IsoBridge": "demo"
        }
      }
    }
  },
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      }
    ]
  }
}