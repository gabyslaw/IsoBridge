{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/isobridge-.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithThreadId"
    ]
  },
  "ConnectionStrings": {
    "AuditDb": "Data Source=audit.db"
  },
  "Iso8583": {
    "TemplatePath": "Config/iso8583-templates.json",
    "UseBcd": false
  },
  "AuditSecurity": {
    "HmacKey": "dev-secret-change"
  }
}